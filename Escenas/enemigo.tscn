script/source = "extends CharacterBody2D

@export var velocidad: float = 150.0
@export var nodo_objetivo: NodePath  

var objetivo: Sprite2D
var agente_navegacion: NavigationAgent2D

func _ready():
	Establecer_camino()
	call_deferred(\"Localizar_objetivo\")
	pass

func Establecer_camino():
	objetivo = get_node(nodo_objetivo)
	agente_navegacion = $NavigationAgent2D
	agente_navegacion.path_desired_distance = 4.0
	agente_navegacion.target_desired_distance = 4.0
	pass

func Localizar_objetivo():
	await get_tree().physics_frame
	agente_navegacion.target_position = objetivo.global_position
	pass

func _physics_process(delta):
	Navegar_y_Actualizar_objetivo()
	pass

func Navegar_y_Actualizar_objetivo():
	Navegar()
	Actualizar_posicion_objetivo()
	pass

func Navegar():
	var siguiente_posicion = agente_navegacion.get_next_path_position()
	var direccion = (siguiente_posicion - global_position).normalized()
	velocity = direccion * velocidad
	move_and_slide()
	pass

func Actualizar_posicion_objetivo():
	# Actualiza el destino cada cierto tiempo (ej: cada 0.3 segundos)
	if Engine.get_frames_drawn() % 18 == 0:  # 60 FPS * 0.3 = 18 frames
		agente_navegacion.target_position = objetivo.global_position
	pass
"

